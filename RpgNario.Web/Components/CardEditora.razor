<MudCard>
    <MudCardMedia Image=@Foto></MudCardMedia>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6"><b>@Editora!.Nome</b></MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText Typo="Typo.body2">@Editora!.Tipo</MudText>
        <MudLink Href="@Editora!.SiteOficial">Link da Editora</MudLink>
    </MudCardContent>
    <MudCardActions>
        <AuthorizeView>
            <Authorized>
                <MudButton Color="Color.Warning" Variant="Variant.Outlined" Href=@($"/EditarEditora/{Editora!.Nome}")>
                    Editar
                </MudButton>
                <MudButton Color="Color.Primary" Variant="Variant.Outlined" Href=@($"/SistemasPorEditora/{Editora!.Nome}") Class="ml-4">
                    Sistemas
                </MudButton>
            </Authorized>
            <NotAuthorized>
                <MudButton Color="Color.Primary" Variant="Variant.Outlined" Href=@($"/SistemasPorEditora/{Editora!.Nome}")>
                    Sistemas
                </MudButton>
            </NotAuthorized>
        </AuthorizeView>
    </MudCardActions>
</MudCard>

@code {
    [Parameter]
    public EditoraResponse? Editora { get; set; }

    private string? Foto => Editora!.Foto!.Contains("Foto") ? $"http://localhost:5100{Editora.Foto}" : "/images/cardEditora.jpg";
}